{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gallery-gui",
  "version": "0.2.2",
  "identifier": "com.nullcode1337.gallery-gui",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "gallery-gui",
        "width": 900,
        "height": 700,
        "backgroundColor": "#2e2e32"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["../prebuilts/gallery-dl"],
    "resources": [
      "../static/poppins-bold.ttf",
      "../static/notosans-semibold.ttf",
      "../static/app.css"
    ]
  }
}
